<%- include('templates/header', {authenticated: authenticated}) %>
<main>
    <div class="row g-5">
        <div class="col-md-7 col-lg-8">
            <h4 class="mb-3">Iniciar sesión</h4>
            <form class="needs-validation" novalidate method="POST" action="/users/login">
                <div class="row g-3">
                    <div class="col-12">
                        <label for="username" class="form-label">Usuario</label>
                        <input
                            class="form-control"
                            id="username"
                            name="username"
                            placeholder="usuario@dominio"
                            required
                            type="email"
                            value=""
                        />
                        <div class="invalid-feedback"></div>
                    </div>

                    <div class="col-12">
                        <label for="password" class="form-label">Contraseña</label>
                        <input
                            class="form-control"
                            id="password"
                            minlength="6"
                            name="password"
                            placeholder="******"
                            required
                            type="password"
                        />
                        <div class="invalid-feedback"></div>
                    </div>
				</div>

                <hr class="my-4">

                <div class="text-end">
                    <div class="d-inline-flex gap-2 mb-5">
                        <a class="btn btn-outline-secondary btn-lg px-4" href="/register">Crear cuenta</a>
                        <button class="d-inline-flex align-items-center btn btn-primary btn-lg px-4" type="submit">Acceder</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</main>
<script src="/js/login.js"></script>
<%- include('templates/footer') %>
